{
  "$id": "EJH39k_xxuXt5SKfsLYKdx08mnqy8fSUEPtpil6RabsE",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Data Attestation Credential",
  "description": "Data attestation credential enables verifiable attestation of the data(cryptographic digest) by the Issuer",
  "type": "object",
  "credentialType": "DataAttestationCredential",
  "version": "1.0.0",
  "required": [
    "v",
    "d",
    "i",
    "ri",
    "s",
    "a"
  ],
  "properties": {
    "v": {
      "description": "Version",
      "type": "string"
    },
    "d": {
      "description": "Credential SAID",
      "type": "string"
    },
    "i": {
      "description": "Issuer AID",
      "type": "string"
    },
    "ri": {
      "description": "Credential status registry",
      "type": "string"
    },
    "s": {
      "description": "Schema SAID",
      "type": "string"
    },
    "a": {
      "$id": "EI8qxQC1_PL25lTLRLwkrijM_VJofc1zsLPjvjqNyuls",
      "description": "Attributes block",
      "type": "object",
      "properties": {
        "d": {
          "description": "Attributes block SAID",
          "type": "string"
        },
        "dt": {
          "description": "Issuance datetime, ISO-8601 datetime string",
          "format": "date-time",
          "type": "string"
        },
        "digest": {
          "type": "string",
          "description": "CESR-encoded digest of the data."
        }
      },
      "additionalProperties": false,
      "required": [
        "d",
        "dt",
        "digest"
      ]
    },
    "e": {
      "oneOf": [
        {
          "description": "Edges block SAID",
          "type": "string"
        },
        {
          "$id": "EOMPXC5IzK_sztnsUf3pmUlN-nWc0tOzbR9G4DbPhtNS",
          "description": "Edges detail",
          "type": "object",
          "required": [
            "d",
            "issuer"
          ],
          "properties": {
            "d": {
              "description": "Edges section SAID",
              "type": "string"
            },
            "issuer": {
              "description": "Edge credential that proves the identity of the issuer",
              "oneOf": [
                {
                  "description": "Simple compact form of node SAID",
                  "type": "string"
                },
                {
                  "description": "Edge credential that proves the identity of the issuer detail",
                  "type": "object",
                  "required": [
                    "n"
                  ],
                  "properties": {
                    "n": {
                      "description": "SAID of a credential that proves the identity of the issuer",
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false
}